<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".ui.doexam.result.ResultActivity">
    <LinearLayout
        android:paddingTop="16dp"
        android:background="@drawable/bgr_result_activity"
        android:layout_margin="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvNameExamResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="240dp"
                android:layout_height="24dp">
                <ImageView
                    app:srcCompat="@drawable/ic_school"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:text="@string/school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvNameSchoolResult"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="240dp"
                android:layout_height="24dp">
                <ImageView
                    app:srcCompat="@drawable/ic_year"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:text="@string/yearSchool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvYearResult"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="240dp"
                android:layout_height="24dp">
                <ImageView
                    app:srcCompat="@drawable/ic_clock"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:text="@string/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvTimeResult"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:text="90 phút"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="240dp"
                android:layout_height="24dp">
                <ImageView
                    app:srcCompat="@drawable/ic_amount"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:text="@string/amount_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvAmountResult"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:text="50 câu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="4dp"
                android:id="@+id/lnlAmountCorrect"
                android:layout_width="240dp"
                android:layout_height="24dp">
                <ImageView
                    app:srcCompat="@drawable/ic_correct"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:text="@string/amount_sentense_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/colorGreen"
                    android:id="@+id/tvAmountCorrectResult"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:id="@+id/lnlAmountIncorrect"
                android:layout_width="240dp"
                android:layout_height="24dp">
                <ImageView
                    app:srcCompat="@drawable/ic_incorrect"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:text="@string/amount_sentense_incorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/colorGoogleButton"
                    android:id="@+id/tvAmountIncorrectResult"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:id="@+id/lnlAmountNotDo"
                android:layout_width="240dp"
                android:layout_height="24dp">
                <ImageView
                    app:srcCompat="@drawable/ic_not_do"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:text="@string/amount_sentense_not_do"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvAmountNotDoResult"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorYellow" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvScoreResult"
            android:textStyle="bold"
            android:textColor="@color/colorGoogleButton"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/lnlReDo"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvReDoExamResult"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textSize="24dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bgr_button_do_exam"
                android:text="@string/redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imgShareResult"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/ic_share_color"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgCloseResult"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_false"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>

</LinearLayout>