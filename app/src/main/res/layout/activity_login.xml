<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.LoginActivity">


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_above="@id/lnlButtonLogin"
        android:id="@+id/lnlLogo"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icLogo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/ic_logo" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icLogoText"
            android:layout_width="220dp"
            android:layout_height="95dp"
            android:layout_below="@id/icLogo"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_logo_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnlButtonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <LinearLayout
            android:onClick="lnlLoginGoogle"
            android:id="@+id/lnlLoginGoogle"
            android:padding="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bgr_button_login_google">
            <ImageView
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_logo_google"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                android:text="@string/text_login_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:onClick="lnlLoginFacebook"
            android:id="@+id/lnlLoginFacebook"
            android:padding="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bgr_button_login_facebook">
            <ImageView
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_logo_facebook"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                android:text="@string/text_login_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>